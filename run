#! /usr/bin/bash

optimize=""
config_path="$PROJECT_HOME/data/single_run_example.json"
output_path="default"
dry=""
runs=1
verbose=""
visualize=0
use_logy=""
while [[ $# -ne 0 ]]; do
    case "$1" in
        --release|-r)
            optimize="--config=optimized"
            shift 1
            ;;
        --dry)
            dry="--dry"
            shift 1
            ;;
        --verbose|-v)
            verbose="--verbose"
            shift 1
            ;;
        --config)
            config_path="$PROJECT_HOME/$2"
            shift 2
            ;;
        --runs)
            runs=$2
            shift 2
            ;;
        -o|--output)
            output_path="$2"
            shift 2
            ;;
        --visualize)
            visualize=1
            shift 1
            ;;
        --use_logy)
            use_logy="--use_logy"
            shift 1
            ;;
        *)
            echo "Unrecognized command! $1"
            echo "./run [--release|-r] [--config $config_path] [--output|-o $output_path] [--dry] [--runs $runs] [--visualize]"
            exit 1
            ;;
    esac
done

set -xe

bazel run //:main $optimize -- --config $config_path $dry --runs $runs -o $output_path $verbose

if [[ $visualize == 1 ]]; then
    plot-timeseries --output_dir $output_path --save_dir "$output_path/visualization" $use_logy
fi
#! /usr/bin/bash

optimize=""
config_path="$PROJECT_HOME/data/sim_config.json"
output_path="$PROJECT_HOME/output"
dry=""
runs=1
while [[ $# -ne 0 ]]; do
    case "$1" in
        --release|-r)
            optimize="--config=optimized"
            shift 1
            ;;
        --dry)
            dry="--dry"
            shift 1
            ;;
        --config)
            config_path="$PROJECT_HOME/$2"
            shift 2
            ;;
        --runs)
            runs=$2
            shift 2
            ;;
        -o|--output)
            output_path="$PROJECT_HOME/$2"
            shift 2
            ;;
        *)
            echo "Unrecognized command! $1"
            echo "./run [--release|-r] [--config $config_path] [--output|-o $output_path] [--dry] [--runs $runs]"
            exit 1
            ;;
    esac
done

bazel run //:main $optimize -- --config $config_path $dry --runs $runs -o $output_path